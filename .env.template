# WDBX Environment Configuration
# Copy this file to .env and modify as needed

# Data Storage
WDBX_DATA_DIR=./data
WDBX_CACHE_DIR=./wdbx_cache

# Database Configuration
WDBX_MAX_SHARDS=8
WDBX_VECTOR_DIMENSION=768
WDBX_INDEX_TYPE=hnsw

# Memory Management
WDBX_MAX_MEMORY_PERCENT=85.0
WDBX_MEMORY_CHECK_INTERVAL=10
WDBX_MEMORY_OPTIMIZATION_ENABLED=true

# Logging
WDBX_LOG_LEVEL=INFO
WDBX_LOG_FILE=./logs/wdbx.log

# Server Configuration
WDBX_SERVER_HOST=127.0.0.1
WDBX_SERVER_PORT=8080
WDBX_SOCKET_PORT=9090
WDBX_WEB_PORT=3000

# ML Configuration
WDBX_DEFAULT_ML_BACKEND=auto
WDBX_MODEL_CACHE_DIR=./wdbx_model_cache
WDBX_EMBEDDINGS_MODEL=all-MiniLM-L6-v2

# Security (development only - use proper env vars in production)
# WDBX_API_KEY=your_api_key_here

# Visualization
WDBX_VISUALIZATION_DIR=./wdbx_visualizations
WDBX_UI_THEME=auto 